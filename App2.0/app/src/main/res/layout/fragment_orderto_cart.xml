<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentOrdertoCart"
    android:id="@+id/ContainerOrdertoCart">

    <LinearLayout
        android:id="@+id/ContainerContentOrdertoCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">
        <android.widget.Toolbar
            android:id="@+id/ToolbarOrdertoCart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/pal4c3"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Detail Menu"/>
        </android.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/TxtvOrdertoCartCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Makanan"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/TxtvOrdertoCartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Makanan"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/TxtvOrdertoCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Makanan"
                android:textColor="@color/white"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>