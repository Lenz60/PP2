<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TxtvStatusOrderCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Kode Order : "
                android:textSize="25sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/TxtvStatusCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="xxx"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/TxtvStatusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Bejo"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TxtvStatusFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Mie Ayam"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/TxtvStatusFoodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Kuah"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/TxtvStatusNoTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="meja 3"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/TxtvStatusStatuses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Statuses"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/TxtvStatusDisiapkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="Disiapkan"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:visibility="invisible"
                android:background="@color/Yellow"/>
            <TextView
                android:id="@+id/TxtvStatusSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="Selesai"
                android:visibility="visible"
                android:textColor="@color/white"
                android:background="@color/Green"
                android:textSize="25dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/TxtvStatusTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:text="Total Harga"
            android:textColor="@color/Green"/>
    </LinearLayout>


</LinearLayout>