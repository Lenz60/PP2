<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="vertical"
            android:paddingTop="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/TxtvTempat"
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Tempat :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/SpinnerTempat"
                    android:entries="@array/lokasi"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/TxtvKursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kursi :"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/SpinnerKursi1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:entries="@array/nomor_kursi1"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/SpinnerKursi2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:entries="@array/nomor_kursi2"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgFood1"
                    android:layout_width="121dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/TxtvFoodNameCart1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Spageti La Onte"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TxtvPriceCart1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10000"
                            android:textColor="@color/GreenSaldo"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="211dp"
                        android:layout_height="95dp"
                        android:orientation="horizontal"
                        android:paddingTop="20dp">

                        <Button
                            android:id="@+id/BtnReduceItemCart1"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="-"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/EdtxItem1"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:ems="10"
                            android:inputType="none" />

                        <Button
                            android:id="@+id/BtnAddItemCart1"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="+"
                            android:textSize="25sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgFood2"
                    android:layout_width="121dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/TxtvFoodNameCart2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Spageti La Onte"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TxtvPriceCart2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10000"
                            android:textColor="@color/GreenSaldo"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="211dp"
                        android:layout_height="95dp"
                        android:orientation="horizontal"
                        android:paddingTop="20dp">

                        <Button
                            android:id="@+id/BtnAddItemCart2"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="-"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/EdtxItem2"
                            android:layout_width="21dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />

                        <Button
                            android:id="@+id/BtnReduceItemCart2"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="+"
                            android:textSize="25sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgFood3"
                    android:layout_width="121dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/TxtvFoodNameCart3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Spageti La Onte"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TxtvPriceCart3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10000"
                            android:textColor="@color/GreenSaldo"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="211dp"
                        android:layout_height="95dp"
                        android:orientation="horizontal"
                        android:paddingTop="20dp">

                        <Button
                            android:id="@+id/BtnAddItemCart3"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="-"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/EdtxItem3"
                            android:layout_width="21dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />

                        <Button
                            android:id="@+id/BtnReduceItemCart3"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="+"
                            android:textSize="25sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/BtnOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</ScrollView>
