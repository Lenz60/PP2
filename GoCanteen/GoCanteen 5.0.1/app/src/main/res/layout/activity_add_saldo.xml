<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.AddSaldoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/AddSaldoBar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgBack"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="398dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bordersaldo"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/TxtvAddSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan kode voucher"
            android:textColor="@color/GreenSaldo"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/EdtxAddSaldo"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"></EditText>

        <Button
            android:id="@+id/BtnAddSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Top Up" />


    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>